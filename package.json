{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true
  },
  "name": "ts_new_pr",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/database.ts",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up -m migrations -r dotenv/config",
    "migrate:down": "node-pg-migrate down -m migrations -r dotenv/config",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.16.0",
    "jest": "^30.2.0",
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "private": true
}
